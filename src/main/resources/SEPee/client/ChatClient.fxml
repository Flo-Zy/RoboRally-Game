<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="SEPee.client.viewModel.ChatClientController">

    <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS"/>
    <TextField fx:id="messageField" promptText="Type your message..." />
    <Button fx:id="sendButton" text="Send" onAction="#sendMessage"/>
</VBox>
