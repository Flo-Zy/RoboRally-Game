<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="SEPee.client.viewModel.ChatClientController">

    <!-- Oberer Teil -->
    <VBox VBox.vgrow="ALWAYS">
        <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS"/>
    </VBox>

    <!-- Unterer Teil -->
    <HBox spacing="10" VBox.vgrow="NEVER">
        <TextField fx:id="messageField" promptText="Tippe deine Nachricht..." HBox.hgrow="ALWAYS"/>
        <Button fx:id="sendButton" text="Senden" onAction="#sendMessage" HBox.hgrow="ALWAYS"/>
    </HBox>
</VBox>