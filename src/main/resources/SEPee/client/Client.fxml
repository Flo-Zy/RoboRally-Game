<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="/CSSFiles/client.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SEPee.client.viewModel.ClientController">

    <!-- Oberer Teil (HBox) -->
    <HBox prefHeight="900.0" prefWidth="920.0" spacing="10">
        <!-- Linke HBox -->
        <HBox prefHeight="900.0" prefWidth="671.0" HBox.hgrow="ALWAYS" />
        <VBox fx:id="DizzyHighwayMap" managed="false" visible="false">
            <fx:include source="DizzyHighway.fxml" />
        </VBox>
        <VBox fx:id="ExtraCrispyMap" managed="false" visible="false">
            <fx:include source="ExtraCrispy.fxml" />
        </VBox>
        <VBox fx:id="LostBearingsMap" managed="false" visible="false">
            <fx:include source="LostBearings.fxml" />
        </VBox>
        <VBox fx:id="DeathTrapMap" managed="false" visible="false">
            <fx:include source="DeathTrap.fxml" />
        </VBox>

        <!-- Rechte HBox (Chatarea VBox) -->
        <VBox prefHeight="645.0" prefWidth="287.0" spacing="10" HBox.hgrow="NEVER" VBox.vgrow="ALWAYS">
            <!-- Verankerte TextArea auf der rechten Seite -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <HBox HBox.hgrow="ALWAYS">
                    <!-- Platzhalter f端r die linke Seite -->
                    <HBox HBox.hgrow="ALWAYS" />
                    <VBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
                        <TextArea fx:id="chatArea" editable="false" prefHeight="535.0" prefWidth="355.0" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets left="7.0" right="7.0" top="7.0" />
                            </VBox.margin></TextArea>
                    </VBox>
                </HBox>
                <!-- Innerste VBox f端r Textfield, VisibilityButton und SendButton -->
                <VBox spacing="10" VBox.vgrow="NEVER">
                    <!-- HBox f端r Textfield und VisibilityButton -->
                    <HBox spacing="10">
                  <AnchorPane>
                     <children>
                        <HBox layoutX="7.0" prefHeight="26.0" prefWidth="249.0">
                           <children>
                                    <TextField fx:id="messageField" prefHeight="26.0" prefWidth="168.0" promptText="Tippe deine Nachricht..." HBox.hgrow="ALWAYS" />
                                    <Button fx:id="visibilityButton" prefHeight="26.0" prefWidth="66.0" text="Visibility" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="16.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
                    </HBox>
                    <!-- HBox f端r SendButton -->
                    <HBox prefHeight="51.0" prefWidth="287.0" spacing="10">
                        <AnchorPane prefHeight="0.0" prefWidth="287.0">
                            <children>
                        <HBox prefHeight="100.0" prefWidth="263.0">
                           <children>
                                      <!-- Ready Button -->
                                      <Button fx:id="readyButton" onAction="#sendReady" prefHeight="26.0" prefWidth="114.0" text="BEREIT" HBox.hgrow="ALWAYS">
                                          <opaqueInsets>
                                              <Insets />
                                          </opaqueInsets>
                                 <HBox.margin>
                                    <Insets left="7.0" />
                                 </HBox.margin>
                                      </Button>
                                      <Button fx:id="sendButton" onAction="#sendMessage" prefHeight="26.0" prefWidth="66.0" text="Senden" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="70.0" right="7.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                            </children>
                        </AnchorPane>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </HBox>
</VBox>
