<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SEPee.client.viewModel.ClientController">

    <!-- Oberer Teil (HBox) -->
    <HBox prefHeight="645.0" prefWidth="1130.0" spacing="10" VBox.vgrow="ALWAYS">
        <!-- Linke HBox (leer) -->
        <HBox prefHeight="645.0" prefWidth="830.0" HBox.hgrow="ALWAYS">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
         </children></HBox>

        <!-- Rechte HBox (Chatarea VBox) -->
        <VBox prefHeight="645.0" prefWidth="287.0" spacing="10" HBox.hgrow="NEVER" VBox.vgrow="ALWAYS">
            <!-- Verankerte TextArea auf der rechten Seite -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <HBox HBox.hgrow="ALWAYS">
                    <!-- Platzhalter f端r die linke Seite -->
                    <HBox HBox.hgrow="ALWAYS" />
                    <VBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
                        <TextArea fx:id="chatArea" editable="false" prefHeight="535.0" prefWidth="355.0" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets left="7.0" right="7.0" top="7.0" />
                            </VBox.margin></TextArea>
                    </VBox>
                </HBox>
                <!-- Innerste VBox f端r Textfield, VisibilityButton und SendButton -->
                <VBox spacing="10" VBox.vgrow="NEVER">
                    <!-- HBox f端r Textfield und VisibilityButton -->
                    <HBox spacing="10">
                        <TextField fx:id="messageField" promptText="Tippe deine Nachricht..." HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="7.0" />
                            </HBox.margin></TextField>
                        <Button fx:id="visibilityButton" text="Visibility" HBox.hgrow="NEVER">
                            <HBox.margin>
                                <Insets right="7.0" />
                            </HBox.margin></Button>
                    </HBox>
                    <!-- HBox f端r SendButton -->
                    <HBox prefHeight="51.0" prefWidth="287.0" spacing="10">
                  <AnchorPane prefHeight="0.0" prefWidth="287.0">
                     <children>
                              <Button fx:id="sendButton" layoutX="217.0" layoutY="13.0" onAction="#sendMessage" prefHeight="26.0" prefWidth="63.0" text="Senden" AnchorPane.bottomAnchor="31.0" AnchorPane.leftAnchor="217.0" AnchorPane.rightAnchor="7.0" AnchorPane.topAnchor="0.0" />
                              <!-- Ready Button -->
                              <Button fx:id="readyButton" layoutX="47.0" layoutY="13.0" onAction="#sendReady" prefHeight="25.0" prefWidth="128.0" text="BEREIT">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Button>
                     </children>
                  </AnchorPane>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </HBox>
</VBox>
