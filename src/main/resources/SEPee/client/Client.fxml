<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="/CSSFiles/client.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SEPee.client.viewModel.ClientController">

    <!-- Oberer Teil (HBox) -->
    <HBox prefHeight="800.0" prefWidth="900.0" VBox.vgrow="NEVER">
        <!-- Linke HBox -->
        <HBox prefHeight="800.0" prefWidth="680.0" spacing="10" HBox.hgrow="ALWAYS" />

        <VBox fx:id="DizzyHighwayMap" managed="false" visible="false">
            <fx:include source="DizzyHighway.fxml" />
        </VBox>
        <VBox fx:id="ExtraCrispyMap" managed="false" visible="false">
            <fx:include source="ExtraCrispy.fxml" />
        </VBox>
        <VBox fx:id="LostBearingsMap" managed="false" visible="false">
            <fx:include source="LostBearings.fxml" />
        </VBox>
        <VBox fx:id="DeathTrapMap" managed="false" visible="false">
            <fx:include source="DeathTrap.fxml" />
        </VBox>
      <AnchorPane HBox.hgrow="NEVER">
         <children>
              <!-- Rechte HBox (Chatarea VBox) -->
              <VBox prefHeight="800.0" prefWidth="220.0">
                  <!-- Verankerte rechte TextArea -->
                  <VBox VBox.vgrow="ALWAYS">
                      <HBox HBox.hgrow="NEVER" VBox.vgrow="NEVER">
                          <VBox alignment="CENTER_LEFT" prefHeight="520.0" prefWidth="220.0" HBox.hgrow="NEVER" VBox.vgrow="NEVER">
                              <TextArea fx:id="chatArea" editable="false" prefHeight="520.0" prefWidth="190.0">
                                  <VBox.margin>
                                      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                  </VBox.margin>
                              </TextArea>
                          </VBox>
                      </HBox>
                      <!-- Innerste VBox für Textfield, VisibilityButton und SendButton -->
                      <VBox prefWidth="220.0" VBox.vgrow="ALWAYS">
                          <!-- HBox für Textfield und VisibilityButton -->
                          <HBox VBox.vgrow="NEVER">
                        <AnchorPane>
                           <children>
                              <HBox prefHeight="41.0" prefWidth="220.0">
                                 <children>
                                          <Button fx:id="visibilityButton" minHeight="26.0" minWidth="62.5" prefHeight="26.0" prefWidth="62.5" text="Alle" HBox.hgrow="NEVER">
                                       <HBox.margin>
                                          <Insets bottom="15.0" left="142.0" right="15.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </AnchorPane>
                          </HBox>
                          <!-- HBox für SendButton -->
                          <HBox VBox.vgrow="NEVER">
                        <children>
                           <AnchorPane prefWidth="220.0" HBox.hgrow="ALWAYS">
                              <children>
                                 <HBox prefWidth="220.0">
                                    <children>
                                       <TextField fx:id="messageField" minHeight="26.0" minWidth="190.0" prefHeight="26.0" prefWidth="115.0" promptText="Tippe deine Nachricht..." HBox.hgrow="NEVER">
                                          <HBox.margin>
                                             <Insets bottom="15.0" left="15.0" right="15.0" />
                                          </HBox.margin>
                                       </TextField>
                                    </children>
                                 </HBox>
                              </children>
                           </AnchorPane>
                        </children>
                          </HBox>
                     <HBox VBox.vgrow="NEVER">
                        <children>
                           <AnchorPane HBox.hgrow="NEVER">
                              <children>
                                 <HBox prefHeight="41.0" prefWidth="220.0">
                                    <children>
                                       <Button fx:id="readyButton" minWidth="100.0" onAction="#sendReady" text="BEREIT" HBox.hgrow="NEVER">
                                          <opaqueInsets>
                                             <Insets />
                                          </opaqueInsets>
                                          <HBox.margin>
                                             <Insets bottom="15.0" left="15.0" right="15.5" />
                                          </HBox.margin>
                                       </Button>
                                       <Button fx:id="sendButton" minHeight="26.0" minWidth="59.0" onAction="#sendMessage" text="Senden" HBox.hgrow="NEVER">
                                          <HBox.margin>
                                             <Insets bottom="15.0" left="15.0" right="15.0" />
                                          </HBox.margin>
                                       </Button>
                                    </children>
                                 </HBox>
                              </children>
                           </AnchorPane>
                        </children>
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </HBox>
                      </VBox>
                  </VBox>
              </VBox>
         </children>
      </AnchorPane>
    </HBox>
</VBox>
