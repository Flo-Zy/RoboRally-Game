<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="/CSSFiles/client.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SEPee.client.viewModel.ClientController">

    <!-- Oberer Teil (HBox) -->
    <HBox prefHeight="800.0" prefWidth="900.0" VBox.vgrow="NEVER">
        <!-- Linke HBox -->
        <HBox alignment="CENTER" prefHeight="800.0" prefWidth="680.0" spacing="10" HBox.hgrow="ALWAYS">
         <children>
            <Button fx:id="readyButton" minWidth="100.0" onAction="#sendReady" text="BEREIT" HBox.hgrow="NEVER">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets bottom="190.0" />
               </HBox.margin>
            </Button>
         </children></HBox>

        <VBox fx:id="DizzyHighwayMap" managed="false" visible="false">
            <fx:include source="DizzyHighway.fxml" />
        </VBox>
        <VBox fx:id="ExtraCrispyMap" managed="false" visible="false">
            <fx:include source="ExtraCrispy.fxml" />
        </VBox>
        <VBox fx:id="LostBearingsMap" managed="false" visible="false">
            <fx:include source="LostBearings.fxml" />
        </VBox>
        <VBox fx:id="DeathTrapMap" managed="false" visible="false">
            <fx:include source="DeathTrap.fxml" />
        </VBox>
      <AnchorPane HBox.hgrow="NEVER">
         <children>
              <!-- Rechte HBox (Chatarea VBox) -->
              <VBox prefHeight="800.0" prefWidth="220.0">
                  <!-- Verankerte rechte TextArea -->
                  <VBox VBox.vgrow="ALWAYS">
                      <HBox prefHeight="515.0" prefWidth="220.0" HBox.hgrow="NEVER" VBox.vgrow="NEVER">
                          <VBox alignment="TOP_CENTER" prefHeight="511.0" prefWidth="220.0" HBox.hgrow="NEVER" VBox.vgrow="NEVER">
                        <HBox>
                           <children>
      
                                    <ImageView fx:id="avatarImageView" fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true" visible="false">
                                 <HBox.margin>
                                    <Insets left="15.0" />
                                 </HBox.margin>
                                    </ImageView>
      
                                    <Label fx:id="avatarNameLabel" prefHeight="55.0" prefWidth="135.0" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets right="15.0" />
                                 </HBox.margin>
                                    </Label>
                           </children>
                           <VBox.margin>
                              <Insets top="15.0" />
                           </VBox.margin>
                        </HBox>

                              <TextArea fx:id="chatArea" editable="false" prefHeight="414.0" prefWidth="190.0">
                                  <VBox.margin>
                                      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                  </VBox.margin>
                              </TextArea>

                          </VBox>
                      </HBox>
                      <!-- Innerste VBox für Textfield, VisibilityButton, SendButton und AvatarImage -->
                      <VBox prefWidth="220.0" VBox.vgrow="ALWAYS">
                          <!-- HBox für Textfield und VisibilityButton -->
                          <HBox VBox.vgrow="NEVER">
                              <AnchorPane>
                                  <children>
                                      <HBox prefHeight="41.0" prefWidth="220.0">
                                          <children>

                                              <Button fx:id="visibilityButton" minHeight="26.0" minWidth="62.5" prefHeight="26.0" prefWidth="62.5" text="Alle" HBox.hgrow="NEVER">
                                                  <HBox.margin>
                                                      <Insets bottom="15.0" left="15.0" right="15.0" />
                                                  </HBox.margin>
                                              </Button>

                                          </children>
                                      </HBox>
                                  </children>
                              </AnchorPane>
                          </HBox>
                          <!-- HBox für SendButton -->
                          <HBox VBox.vgrow="NEVER">
                        <children>
                           <AnchorPane prefWidth="220.0" HBox.hgrow="ALWAYS">
                              <children>
                                 <HBox prefWidth="220.0">
                                    <children>
                                       <TextField fx:id="messageField" minHeight="26.0" minWidth="190.0" prefHeight="26.0" prefWidth="115.0" promptText="Tippe deine Nachricht..." HBox.hgrow="NEVER">
                                          <HBox.margin>
                                             <Insets bottom="15.0" left="15.0" right="15.0" />
                                          </HBox.margin>
                                       </TextField>
                                    </children>
                                 </HBox>
                              </children>
                           </AnchorPane>
                        </children>
                          </HBox>
                     <HBox alignment="TOP_RIGHT" VBox.vgrow="NEVER">
                        <children>
                           <AnchorPane HBox.hgrow="NEVER">
                              <children>
                                 <Button fx:id="sendButton" alignment="CENTER" contentDisplay="CENTER" minHeight="26.0" minWidth="59.0" onAction="#sendMessage" text="Senden" />
                              </children>
                              <HBox.margin>
                                 <Insets left="15.0" right="15.0" />
                              </HBox.margin>
                           </AnchorPane>
                        </children>
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </HBox>
                      </VBox>
                  </VBox>
              </VBox>
         </children>
      </AnchorPane>
    </HBox>
</VBox>
